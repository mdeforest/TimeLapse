<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michaela.timelapse.SettingsActivity">

    <TextView android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="40dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

    <TextView android:id="@+id/frame_interval_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Frame Interval"
        android:textSize="20dp"
        android:layout_below="@+id/settings_text"/>

    <EditText android:id="@+id/frame_interval_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="2"
        android:textSize="20dp"
        android:inputType="number"
        android:layout_alignBaseline="@+id/frame_interval_text"
        android:layout_alignBottom="@+id/frame_interval_text"
        android:layout_alignParentRight="true" />


</RelativeLayout>
